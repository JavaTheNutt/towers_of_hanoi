<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0" stylesheets="@../../style/applicationStyle02.css"
            xmlns="http://javafx.com/javafx/8"
            fx:controller="ie.wit.assignment.towers_of_hanoi.ver_02.views.menu.Menu02Ctrl">
    <top>
        <StackPane alignment="CENTER_LEFT" prefHeight="26.0" prefWidth="600.0" styleClass="topStack"
                   BorderPane.alignment="CENTER">
            <children>
                <Label text="Label"/>
            </children>
            <padding>
                <Insets left="10.0"/>
            </padding>
        </StackPane>
    </top>
    <center>
        <HBox alignment="CENTER" prefHeight="403.0" prefWidth="600.0" spacing="20.0" styleClass="menuCenter">
            <children>
                <ComboBox fx:id="comboBox" prefWidth="150.0"/>
                <Button mnemonicParsing="false" onAction="#newGameClicked" text="New Game"/>
                <Button fx:id="loadGameButton" mnemonicParsing="false" onAction="#loadGame" text="Load Game"/>
            </children>
        </HBox>
    </center>
</BorderPane>
